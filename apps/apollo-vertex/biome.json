{
    "$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "css": {
        "parser": {
            "tailwindDirectives": true
        }
    },
    "overrides": [
        {
            "includes": [
                "dist/**/*",
                ".next/**/*",
                "app/globals.css",
                "registry/**/*",
                "public/**/*",
                "components/ui/**/*"
            ],
            "formatter": {
                "enabled": false
            },
            "linter": {
                "enabled": false
            }
        }
    ]
}
