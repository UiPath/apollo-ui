{
  "name": "@uipath/apollo-wind-css",
  "version": "1.1.0",
  "description": "Tailwind CSS theme implementation of Apollo Design System",
  "license": "Copyright 2025, UiPath, all rights reserved",
  "main": "./dist/index.css",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.css",
    "./css": "./dist/index.css",
    "./index.css": "./dist/index.css",
    "./theme-selectors": "./dist/theme-selectors.css",
    "./theme-selectors.css": "./dist/theme-selectors.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "pnpm clean && pnpm generate:css-vars && pnpm generate:theme && pnpm generate:theme-selectors && pnpm build:css && pnpm copy:files",
    "clean": "rm -rf dist && mkdir -p dist",
    "copy:files": "cp src/generated/theme-selectors.css dist/theme-selectors.css",
    "build:css": "npx @tailwindcss/cli -i ./src/index.css -o ./dist/index.css --minify",
    "build:css:dev": "npx @tailwindcss/cli -i ./src/index.css -o ./dist/index.css",
    "build:css:watch": "npx @tailwindcss/cli -i ./src/index.css -o ./dist/index.css --watch",
    "generate:css-vars": "tsx scripts/generate-css-vars.ts && prettier --write src/generated/css-vars.ts",
    "generate:theme": "tsx scripts/generate-theme.ts && prettier --write src/generated/theme.css",
    "generate:theme-selectors": "tsx scripts/generate-theme-with-selectors.ts && prettier --write src/generated/theme-selectors.css",
    "dev": "pnpm build:css:watch",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "size": "size-limit",
    "size:why": "size-limit --why"
  },
  "dependencies": {
    "@uipath/apollo-core": "^4.32.0"
  },
  "peerDependencies": {
    "tailwindcss": ">=4.0.0"
  },
  "devDependencies": {
    "@size-limit/file": "^11.2.0",
    "@tailwindcss/cli": "^4.1.14",
    "@types/node": "^22.9.3",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.39.1",
    "postcss": "^8.4.49",
    "size-limit": "^11.2.0",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
