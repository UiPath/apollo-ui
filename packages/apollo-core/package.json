{
  "name": "@uipath/apollo-core",
  "version": "5.0.0",
  "description": "Apollo Design System - Core design tokens, icons, and fonts",
  "repository": {
    "type": "git",
    "url": "https://github.com/UiPath/apollo-ui.git",
    "directory": "packages/apollo-core"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./tokens": {
      "import": "./dist/tokens/index.js",
      "require": "./dist/tokens/index.cjs",
      "types": "./dist/tokens/index.d.ts"
    },
    "./icons": {
      "import": "./dist/icons/index.js",
      "require": "./dist/icons/index.cjs",
      "types": "./dist/icons/index.d.ts"
    },
    "./icons/svg/*": "./dist/static/svg/*",
    "./fonts": {
      "import": "./dist/fonts.js",
      "require": "./dist/fonts.cjs",
      "types": "./dist/fonts.d.ts"
    },
    "./tokens/jss/palette": {
      "import": "./dist/tokens/jss/palette.js",
      "require": "./dist/tokens/jss/palette.cjs",
      "types": "./dist/tokens/jss/palette.d.ts"
    },
    "./tokens/*": "./dist/tokens/*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:tokens && pnpm run process:icons && pnpm run build:icons && rslib build",
    "build:tokens": "node build-tokens.js",
    "build:icons": "tsx scripts/generate-icons.ts",
    "process:icons": "tsx scripts/process-icons.ts && tsx scripts/update-colors.ts",
    "process:icons:dry-run": "tsx scripts/process-icons.ts --dry-run && tsx scripts/update-colors.ts --dry-run",
    "dev": "rslib build --watch",
    "lint": "eslint src --ext .ts,.tsx --ignore-pattern 'src/tokens/**/*.js' --ignore-pattern 'src/tokens/_generated/**'",
    "lint:fix": "eslint src --ext .ts,.tsx --ignore-pattern 'src/tokens/**/*.js' --ignore-pattern 'src/tokens/_generated/**' --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "design-system",
    "design-tokens",
    "apollo",
    "uipath"
  ],
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@rslib/core": "^0.17.0",
    "@vitest/coverage-v8": "^4.0.14",
    "lodash": "^4.17.21",
    "style-dictionary": "2.8.3",
    "svg-to-ts": "^12.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
