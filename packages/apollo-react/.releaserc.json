{
  "branches": ["main"],
  "tagFormat": "@uipath/apollo-react@${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          { "type": "feat", "scope": "apollo-core", "release": "minor" },
          { "type": "feat", "scope": "apollo-utils", "release": "minor" },
          { "type": "fix", "scope": "apollo-core", "release": "patch" },
          { "type": "fix", "scope": "apollo-utils", "release": "patch" },
          { "breaking": true, "scope": "apollo-core", "release": "major" },
          { "breaking": true, "scope": "apollo-utils", "release": "major" }
        ]
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true
      }
    ],
    "@semantic-release/github"
  ]
}
